{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "./functions/src",
		"outDir": "./dist/functions",
		"sourceMap": false,
		"declaration": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"strict": true,
		"typeRoots": ["node_modules/@types", "types"],
		"lib": ["es2015", "dom"]
	},
	"include": ["functions/src/*"],
	"exclude": ["dist", "node_modules", "functions/node_modules"]
}
