{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/functions",
        "sourceMap": false,
        "declaration": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2015", "dom"]
    },
    "include": ["./src/functions/**/*"],
    "exclude": ["dist", "node_modules"]
}
